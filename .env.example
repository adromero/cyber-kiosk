# API Keys
OPENWEATHER_API_KEY=your_openweathermap_api_key
NYT_API_KEY=your_nytimes_api_key
YOUTUBE_API_KEY=your_youtube_api_key

# Configuration
ZIP_CODE=90210

# Alpha Vantage API Key (for financial data)
ALPHA_VANTAGE_API_KEY=your_alphavantage_api_key

# Spotify OAuth Credentials
# Get these from https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REDIRECT_URI=http://localhost:3001/spotify/callback

# Server Configuration
PORT=3001
NETWORK_INTERFACE=auto

# Pi-hole Configuration (for Network Shield feature)
# Connect to a remote Pi-hole server for ad-blocking stats
# PIHOLE_API_URL is the base URL of your Pi-hole (e.g., http://192.168.1.100 or Tailscale IP)
PIHOLE_API_URL=
PIHOLE_PASSWORD=

# Screensaver Configuration (optional)
EPAPER_SERVER_URL=
SCREENSAVER_TIMEOUT=600000
SCREENSAVER_IMAGE_INTERVAL=600000
